<div class="row">

  <div class="col s12 m8 l6 offset-m2 offset-l3">

    <h3>Create a new password</h3>
    <form action="/auth/password" method="POST">

      <div class="input-field ">
        <input id="password" name="password" type="password" class="validate"
          required>
        <label for="password">Password</label>
        <span class="helper-text" data-error="Enter password"></span>
      </div>

      <div class="input-field ">
        <input id="confirm" name="confirm" type="password" class="validate"
          required>
        <label for="confirm">Enter password once more</label>
        <span class="helper-text" data-error="Enter password once more"></span>
      </div>

      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">
      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button type="submit" class="btn btn-primary">Update a password</button>
    </form>
  </div>
</div>