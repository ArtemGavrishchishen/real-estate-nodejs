<div class="estate">

  <div class="row">
    <div class="head valign-wrapper">
      <div class="container">

        <div class="col s12 l8">
          <div class="title">{{estate.title}}</div>
          <div>Address: {{estate.address}}</div>
          <div>Web ID # {{estate._id}}</div>
        </div>

        <div class="col s12 l4">
          <div class="price">{{estate.price}}</div>
          <div>
            <span>Rooms: <b>{{estate.rooms}}</b></span>
            <span>Square: <b>{{estate.square}} ft<sup>2</sup></b>
            </span>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col s12 l8">
        <img src="{{estate.img}}" alt="{{course.title}}">
      </div>

      <div class="col s12 l4">
        <div class="contact">
          <form action="/#" method="POST" novalidate>

            <div class="aget">
              <img src="/" alt="/" class="avatar">
              <div class="name">name</div>
              <div class="email">email</div>
            </div>

            <div class="input-field ">
              <input id="name" name="name" type="text" class="validate"
                required>
              <label for="name">Your name</label>
              <span class="helper-text" data-error="Enter name"></span>
            </div>

            <div class="input-field ">
              <input id="remail" name="email" type="email" class="validate"
                required>
              <label for="remail">Email</label>
              <span class="helper-text" data-error="Enter Email"></span>
            </div>

            {{!-- materialize-textarea - When scaling the browser window down from desktop
  to mobile the textarea overflows on the right making lots of white space.  --}}

            <div class="input-field">
              <textarea id="description" class="description"></textarea>
              <label for="description">Description</label>
            </div>

            <button type="submit" class="btn btn-primary">Contact Agent</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>