<div class="estate">

  <div class="row">
    <div class="head valign-wrapper">
      <div class="container">

        <div class="col s12 l8">
          <div class="title">{{estate.title}}</div>
          <div>Address: {{estate.address}}</div>
          <div>Web ID # {{estate._id}}</div>
        </div>

        <div class="col s12 l4">
          <div class="price">{{estate.price}}</div>
          <div>
            <span>Rooms: <b>{{estate.rooms}}</b></span>
            <span>Square: <b>{{estate.square}} ft<sup>2</sup></b>
            </span>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col s12 l7 xl8 estate-photo">
        {{#if isArrImg}}
        <div class="carousel carousel-slider" data-indicators="true">
          {{#each estate.img}}
          <div class="carousel-item" href="#">
            <img src="{{this}}" alt="photo eatste">
          </div>
          {{/each}}
        </div>
        {{else}}
        <img src=" {{estate.img}}" alt="{{estate.title}}">
        {{/if}}
        <p>{{estate.description}}</p>
      </div>

      <div class="col s12 l5 xl4">
        <div class="contact-wrapper">
          <div class="contact">
            <div class="aget valign-wrapper">
              {{#if agent.avatarUrl}}
              <div class="aget-avatar">
                <img src="/{{agent.avatarUrl}}" alt="avatar-{{agent.name}}">
              </div>
              {{else}}
              <div class="aget-avatar">
                <div class="aget-noavatar">There is no avatar!</div>
              </div>
              {{/if}}
              <div class="aget-info">
                <div class="aget-name">{{agent.name}}</div>
                <div class="aget-email">{{agent.email}}</div>
              </div>
            </div>


            <form action="/#" method="POST" novalidate>
              <div class="input-field ">
                <input id="name" name="name" type="text" class="validate"
                  required>
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Enter name"></span>
              </div>

              <div class="input-field ">
                <input id="email" name="email" type="email" class="validate"
                  required>
                <label for="email">Your Email</label>
                <span class="helper-text" data-error="Enter Email"></span>
              </div>

              {{!-- materialize-textarea - When scaling the browser window down from desktop
  to mobile the textarea overflows on the right making lots of white space.  --}}

              <div class="input-field">
                <textarea id="description" class="description"></textarea>
                <label for="description">I'm interested in this
                  property.</label>
              </div>

              <button type="submit" class="btn btn-primary">Contact
                Agent</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>