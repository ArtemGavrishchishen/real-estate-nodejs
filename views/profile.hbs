<h2>Profile</h2>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
    <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
    {{else}}
    <p>There is no avatar!</p>
    {{/if}}
  </div>

  <div class="col s6">

    <div>Your email: <strong>{{user.email}}</strong></div>
    <div>Your role: <strong>{{user.role}}</strong></div>

    <form action="/profile" method="POST" enctype="multipart/form-data">
      <div class="input-field ">
        <input id="name" name="name" type="text" class="validate"
          value="{{user.name}}" required>
        <label for="name">Your name</label>
        <span class="helper-text" data-error="This field couldn't be empty!"
          data-success="right"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <button type="submit" class="btn ">Change</button>
    </form>
  </div>
  {{#if errors}}
  <input type="hidden" class="toast" value="{{errors}}">
  {{/if}}
</div>